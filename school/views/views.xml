        <record id="res_partner_inherit" model="ir.ui.view">
            <field name="name">Res.Partner.Inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"></field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="replace">
                    <group attrs="{'invisible': [('company_type', '=', 'company')]}">
                        <table style='width:50%;' border='0'>
                            <tr>
                                <th style='width:33.33%; font-weight:bold'>
                                    <label for="first_name"/>
                                </th>
                                <th style='width:33.33%; font-weight:bold'>
                                    <label for="middle_name"/>
                                </th>
                                <th style='width:33.33%; font-weight:bold'>
                                    <label for="last_name"/>
                                </th>
                            </tr>
                            <tr>
                                <td>
                                    <field name="first_name" default_focus="1" placeholder="Name" />
                                </td>
                                <td>
                                    <field name="middle_name"/>
                                </td>
                                <td>
                                    <field name="last_name" placeholder="Tags..."/>
                                </td>
                            </tr>
                        </table>
                    </group>
                    <group attrs="{'invisible': [('company_type', '=', 'person')]}">
                        <field name="company_name" placeholder="Company Name "></field>
                      </group>

                    <!--                    <group>-->
                    <!--&lt;!&ndash;    <label for="degrees" string="Latitude" />&ndash;&gt;-->

                    <!--                        <field name="first_name" style="width: 23px" ></field>-->
                    <!--                        <field name="middle_name" style="width: 23%" ></field>-->
                    <!--                        <field name="last_name" style="width: 23%" ></field>-->
                    <!--                        <field name="name" placeholder='Name' class='oe_inline' style='margin-right: 2%%; max-width: 48%% !important;' ></field>-->
                    <!--</group>-->
                    <!--                    -->
                    <!--                    <field name="Gender"></field>-->
                    <!--                    <field name="date_of_birth"></field>-->
                    <!--                    <field name="national_id"></field>-->
                </xpath>
            </field>
        </record>
